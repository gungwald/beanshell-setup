<?xml version="1.0" encoding="UTF-8"?>

<!-- This DOCTYPE tag shuts off the warning from Eclipse that there is no DTD
     associated with this XML file. -->

<!DOCTYPE processing>

<processing>
    <logfiledir>$INSTALL_PATH/log</logfiledir>

    <job name="Create Registry Entries for BeanShell File Association">
        <os family="windows" />
        <executefile name="java" workingDir="$INSTALL_PATH">
            <arg>-jar</arg>
            <arg>$INSTALL_PATH\lib\create-bsh-file-association.jar</arg>
            <arg>$INSTALL_PATH</arg> <!-- Install directory is a required argument -->
        </executefile>
    </job>

    <job name="Update Path to Include BeanShell bin Directory">
        <os family="windows" />
        <executefile name="java" workingDir="$INSTALL_PATH">
            <arg>-jar</arg>
            <arg>$INSTALL_PATH\lib\update-path.jar</arg>
            <arg>$INSTALL_PATH\bin</arg> <!-- Install directory is a required argument -->
        </executefile>
    </job>
</processing>
